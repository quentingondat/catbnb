<div class="container-with-footer">
  <h1 class="text-center">Validate your booking</h1>
  <div class="container">
    <div class="row">
      <div class="col-xs-8">
        <div class="message">
          <h3> 1. Send a message to "Nom du proprio"</h3>
          <div class="box">
            <p>Your message...</p>
          </div>
        </div>
          <h3> 2. Payment</h3>
      </div>
      <div class="col-xs-4">
        <div class="booking-title text-center">
          <h4>Your booking</h4>
        </div>
        <div class="booking text-center">
        <%= simple_form_for [@booking.cat, @booking] do |f| %>
        <%= f.hidden_field :start_at, value: @booking.start_at %>
        <%= f.hidden_field :ends_at, value: @booking.ends_at %>
        <%= f.hidden_field :price_per_day, value: @booking.price_per_day %>
        <%= f.hidden_field :cat_id, value: @booking.cat_id %>
          <p><strong>Cat's name : </strong><%=@booking.cat.name%></p>
          <p><strong>Cat's address : </strong><%=@booking.cat.address%></p>
          <p><strong>Rent from : </strong><%=@booking.start_at%><strong> to </strong><%=@booking.ends_at%></p>
          <div class="line"></div>
          <p><strong>Groom fees : 20$ </strong></p>
          <div class="line"></div>
          <p><strong>TOTAL : </strong></p>
        <%= f.submit "Validate Booking", class: "btn btn-primary" %>
        <% end %>
        </div>
      </div>
    </div>
    <br>
  </div>
</div>
